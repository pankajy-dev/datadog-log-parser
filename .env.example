# Log Parser Utility - Environment Variables Example
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production  # development or production
FLASK_DEBUG=0  # 1 for development, 0 for production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4  # For gunicorn

# Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=csv,txt,log,json

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# CORS Configuration (if needed)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/var/log/datadog-log-parser/app.log

# Redis (if caching is implemented)
# REDIS_URL=redis://localhost:6379/0

# Database (if needed in future)
# DATABASE_URL=postgresql://user:pass@localhost/logparser

# Authentication (if implemented)
# AUTH_ENABLED=false
# JWT_SECRET_KEY=another-random-secret-key

# Rate Limiting (if implemented)
# RATELIMIT_ENABLED=false
# RATELIMIT_DEFAULT=100 per hour

# Monitoring (if implemented)
# SENTRY_DSN=
# PROMETHEUS_ENABLED=false
